<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.c.aka009.listener.MainActivity">

    <ImageView
        android:id="@+id/P_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/P_TV_currentMusicPlayerName"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/my_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/P_logo"
        app:layout_constraintTop_toBottomOf="@+id/P_TV_currentMusicName"/>

    <TextView
        android:id="@+id/P_TV_currentMusicName"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/my_black"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/P_logo"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/P_B_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/p_start"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/P_logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/P_B_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/p_pre"
        app:layout_constraintRight_toLeftOf="@+id/P_B_start"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/P_B_start"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_start"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/P_B_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_pre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/P_B_pre"
        app:layout_constraintTop_toTopOf="@+id/P_B_pre"
        app:srcCompat="@drawable/p_list"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/P_B_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/p_next"
        app:layout_constraintTop_toTopOf="@+id/P_B_start"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_start"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/P_B_start"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/P_B_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_next"
        app:layout_constraintLeft_toRightOf="@+id/P_B_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/P_B_next"
        app:srcCompat="@drawable/p_offrepeat"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/P_B_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/t_close"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.466"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/P_TV_Debug_State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/my_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_B_close"
        app:layout_constraintVertical_bias="0.021"/>

    <ListView
        android:id="@+id/P_LV_1"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_TV_Debug_State"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
